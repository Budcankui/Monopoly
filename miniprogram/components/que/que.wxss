/* components/que/que.wxss */
.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1000;
  background-color: rgba(7, 7, 7, 0.5);
}

.content {
  position: absolute;
  left: 11%;
  bottom: 142px;
  width: 78%;
  top:15%;
  padding-right: 5px;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.que {
  background-size: 100% 100%;
  width: 84%;
  min-height: 27%;
  margin-top: 14px;
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 10px;
  font-size: 13px;
  font-weight: 500;
  text-align: justify;
  line-height: 1.54em;
  color: rgb(65, 53, 3);
}
.Q {
  font-weight: 800;
  font-size: 1.2em;
}

.Qdes {
  text-indent: 2em;
}

.items {
  flex: 1;
  margin-top: 7%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 5px;
  padding-bottom: 25px;
  justify-content: space-between;
  letter-spacing:0.6px;
}
.item {
  background-size: 100% 100%;
  width: 84%;
  min-height: 12px;
  font-size: 12px;
  font-weight: 500;
  color: aliceblue;
  text-align: justify;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 10px;
  padding-right: 10px;
  line-height: 1.6em;
}
.hitem{
  color: rgb(231, 74, 68);
}

.abcd{
  font-size: 13px;
  font-weight: 700;
}

.toolBar {
  position: absolute;
  bottom: 5px;
  left: 36.6%;
  width: 100px;
  height: 134px;
  background-size: 100% 100%;
}

.tool {
  position: absolute;
  left: 9.5px;
  top: 46px;
  width: 80px;
  height: 80px;
  background-size: 100% 100%;
}

.num {
  position: absolute;
  bottom: 3px;
  right: 8px;
  color: rgb(102, 2, 2);
}

.tool-mask {
  position: absolute;
  left: 11px;
  top: 47px;
  width: 77px;
  height: 78px;
  border-radius: 7%;
  background-size: 100% 100%;
  background-color: rgba(7, 7, 7, 0.5);
}